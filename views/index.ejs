<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <h1 class="display-5 text-center py-3">Form de ulpoad</h1>
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-4">

                <% if(messages.messageError) { %>   
                    <div id="message-alert" class="alert alert-danger" role="alert">
                        <%= messages.messageError %>
                    </div>                                           
                <% } %>
          
                <% if(messages.message) { %>   
                <div id="message-alert" class="alert alert-success" role="alert">
                    <%= messages.message %>
                </div>                                           
                <% } %>

                <div class="border rounded p-3">
                    <form action="/upload" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Fa√ßa o ulpoad da imagem:</label>
                            <input class="form-control" name="imagem" type="file" id="formFile">
                        </div>
                        <input type="submit" class="btn btn-outline-success" value="Upload">
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div class="container mt-4">

        <% data.forEach(item => { %>                    
            <img class="img-fluid w-25" src="/uploads/<%= item.imagem %>" alt="">
        <% }) %>
        
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
